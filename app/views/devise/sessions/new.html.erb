<div class="connexion">
  <div class="container" id="container-devise">
    <div class="form-img-container d-flex justify-content-center">
      <div class="img-container ">
        <%= image_tag('plan.avif')%>
      </div>
      <div class="form-container d-flex-column justify-content-center">
        <h2>Connexion</h2>
            <p>

              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-inputs">
                  <%= f.input :nom,
                              required: false,
                              autofocus: true,
                              label: "Nom",
                              input_html: { autocomplete: "nom" } %>
                  <%= f.input :password,
                              required: false,
                              label: "Mot de passe",
                              input_html: { autocomplete: "current-password" } %>
                  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                </div>

                <div class="form-actions">
                  <%= f.button :submit, "Connexion", class: "btn btn-primary"%>
                </div>
              <% end %>
            </p>
      </div>
    </div>

  </div>
</div>
